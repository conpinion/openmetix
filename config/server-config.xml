<iritgo>

	<datasources>

		<datasource id="metix"
			driverClass="@ANTCONFIG-DATABASE-DRIVER@"
			user="@ANTCONFIG-DATABASE-USERNAME@"
			password="@ANTCONFIG-DATABASE-PASSWORD@"
			url="@ANTCONFIG-DATABASE-URL@"
		/>

	</datasources>

	<network>

		<socket
			port="@ANTCONFIG-SERVER-PORT@"
			acceptTimeout="60000"
			readTimeout="30000"
			buffer="65536"
		/>

	</network>

	<threadpool
		id="system"
		minThreads="16"/>

	<metix-measurement>
		<batch-size>360</batch-size>
	</metix-measurement>

</iritgo>
