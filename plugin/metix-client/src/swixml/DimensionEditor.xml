<panel layout="GridBagLayout">

	<gridbagconstraints id="std" 
		insets="2,2,2,2" ipadx="0" ipady="0" 
		gridx="0" gridy="0" gridheight="1" gridwidth="1"
		weightx="0.0" weighty="0.0" 
		anchor="GridBagConstraints.WEST"
		fill="GridBagConstraints.NONE"/>

	<ititledpanel layout="GridBagLayout" title="metix.dimension">
		<gridbagconstraints use="std" gridx="0" gridy="0" fill="GridBagConstraints.BOTH"/>
		
		<!-- Zum Einfügen neuer Dimension -->
		<ifieldlabel text="metix.dimensionKey" id="dimensionKey">
			<gridbagconstraints use="std" gridx="0" gridy="0"/>
		</ifieldlabel>
		
		<combobox id="selectDimensionKey" PrototypeDisplayValue="0123456789|0123456789">
			<gridbagconstraints use="std" gridx="1" gridy="0" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
		</combobox>
		
		<ifieldlabel text="metix.newDimensionKey" id="newDimensionKeyLabel">
			<gridbagconstraints use="std" gridx="0" gridy="1"/>
		</ifieldlabel>
		
		<itextfield id="newDimensionKey" >
			<gridbagconstraints use="std" gridx="1" gridy="1" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
		</itextfield>
		
		<ifieldlabel text="metix.germanDimensionName" id="germanDimensionNameLabel">
			<gridbagconstraints use="std" gridx="0" gridy="2"/>
		</ifieldlabel>
		
		<itextfield id="newGermanName" >
			<gridbagconstraints use="std" gridx="1" gridy="2" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
		</itextfield>
		
		<ifieldlabel text="metix.englishDimensionName" id="englishDimensionNameLabel">
			<gridbagconstraints use="std" gridx="0" gridy="3"/>
		</ifieldlabel>
		
		<itextfield id="newEnglishName" >
			<gridbagconstraints use="std" gridx="1" gridy="3" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
		</itextfield>

	</ititledpanel>
	
	<ititledpanel layout="GridBagLayout" title="metix.unitname">
		<gridbagconstraints use="std" gridx="0" gridy="1" fill="GridBagConstraints.BOTH"/>
		
		<!-- Zum Einfügen einer neuen Einheit-->
		<ifieldlabel text="metix.unitKey" >
			<gridbagconstraints use="std" gridx="0" gridy="0"/>
		</ifieldlabel>
		
		<itextfield id="newUnitKey" >
			<gridbagconstraints use="std" gridx="1" gridy="0" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
		</itextfield>
		
		<ifieldlabel text="metix.unitMin" >
			<gridbagconstraints use="std" gridx="0" gridy="1"/>
		</ifieldlabel>
		
		<itextfield id="newUnitMin" >
			<gridbagconstraints use="std" gridx="1" gridy="1" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
		</itextfield>
		
		<ifieldlabel text="metix.unitMax" >
			<gridbagconstraints use="std" gridx="0" gridy="2"/>
		</ifieldlabel>
		
		<itextfield id="newUnitMax" >
			<gridbagconstraints use="std" gridx="1" gridy="2" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
		</itextfield>
		

		<ifieldlabel text="metix.UnitName" >
			<gridbagconstraints use="std" gridx="0" gridy="3"/>
		</ifieldlabel>
		
		<itextfield id="newUnitName" >
			<gridbagconstraints use="std" gridx="1" gridy="3" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
		</itextfield>


	</ititledpanel>

	<separator>
		<gridbagconstraints use="std" gridx="0" gridy="2" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
	</separator>

	<panel layout="FlowLayout(FlowLayout.RIGHT)">
		<gridbagconstraints use="std" gridx="0" gridy="3" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
		<ibutton action="okAction" text="metix.ok" id="okButton" icon="resources/ok.png"/>
		<ibutton action="cancelAction" text="metix.cancel" icon="resources/cancel.png"/>
	</panel>
	
	
	
</panel>
