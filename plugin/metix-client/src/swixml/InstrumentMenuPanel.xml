<panel layout="GridBagLayout">

	<gridbagconstraints id="std" 
		insets="2,2,2,2" ipadx="0" ipady="0" 
		gridx="0" gridy="0" gridheight="1" gridwidth="1"
		weightx="0.0" weighty="0.0" 
		anchor="GridBagConstraints.WEST"
		fill="GridBagConstraints.NONE"/>

	<gridbagconstraints id="horizFill" 
		insets="2,2,2,2" ipadx="0" ipady="0" 
		gridx="0" gridy="0" gridheight="1" gridwidth="1"
		weightx="0.0" weighty="1.0" 
		anchor="GridBagConstraints.WEST"
		fill="GridBagConstraints.HORIZONTAL"/>
	
	<ititledpanel layout="GridBagLayout" title="metix.configuration">

		<gridbagconstraints use="horizFill" gridx="0" gridy="0"/>

		<ibutton text="metix.configureSimpleInstrument" action="configureSimpleInstrumentAction">
			<gridbagconstraints use="horizFill" gridx="0" gridy="0"/>
		</ibutton>

		<ibutton text="metix.configureBarInstrument" action="configureBarInstrumentAction">
			<gridbagconstraints use="horizFill" gridx="0" gridy="1"/>
		</ibutton>

		<ibutton text="metix.configureRoundInstrument" action="configureRoundInstrumentAction">
			<gridbagconstraints use="horizFill" gridx="0" gridy="2"/>
		</ibutton>

		<ibutton text="metix.configureLineChart" action="configureLineChartAction">
			<gridbagconstraints use="horizFill" gridx="0" gridy="3"/>
		</ibutton>

	</ititledpanel>

	<ititledpanel layout="GridBagLayout" title="metix.display">

		<gridbagconstraints use="horizFill" gridx="1" gridy="0"/>

		<ibutton text="metix.simpleInstrument" action="simpleInstrumentAction">
			<gridbagconstraints use="horizFill" gridx="0" gridy="0"/>
		</ibutton>

		<ibutton text="metix.barInstrument" action="barInstrumentAction">
			<gridbagconstraints use="horizFill" gridx="0" gridy="1"/>
		</ibutton>

		<ibutton text="metix.roundInstrument" action="roundInstrumentAction">
			<gridbagconstraints use="horizFill" gridx="0" gridy="2"/>
		</ibutton>

		<ibutton text="metix.lineChart" action="lineChartAction">
			<gridbagconstraints use="horizFill" gridx="0" gridy="3"/>
		</ibutton>

	</ititledpanel>

</panel>