<panel layout="GridBagLayout">

	<gridbagconstraints id="std"
		insets="1,1,1,1" ipadx="0" ipady="0"
		gridx="0" gridy="0" gridheight="1" gridwidth="1"
		weightx="0.0" weighty="0.0" 
		anchor="GridBagConstraints.WEST"
		fill="GridBagConstraints.NONE"/>

	<textfield id="user" editable="false">
		<gridbagconstraints use="std" gridx="0" gridy="0" weightx="0.25" fill="GridBagConstraints.HORIZONTAL"/>
	</textfield>

	<textfield id="description" editable="false">
		<gridbagconstraints use="std" gridx="1" gridy="0" weightx="0.5" fill="GridBagConstraints.HORIZONTAL"/>
	</textfield>

	<iclocktextfield id="clock" editable="false">
		<gridbagconstraints use="std" gridx="2" gridy="0" weightx="0.1" fill="GridBagConstraints.HORIZONTAL"/>
	</iclocktextfield>

	<progressbar id="progress">
		<gridbagconstraints use="std" gridx="3" gridy="0" weightx="0.05" fill="GridBagConstraints.HORIZONTAL"/>
	</progressbar>

	<textfield text="OpenMetix (C) 2005-2008 IritgoTechnologies" editable="false">
		<gridbagconstraints use="std" gridx="4" gridy="0" weightx="0.1" fill="GridBagConstraints.HORIZONTAL"/>
	</textfield>

</panel>