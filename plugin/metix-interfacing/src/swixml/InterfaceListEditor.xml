<panel layout="GridBagLayout">

	<gridbagconstraints id="std" 
		insets="2,2,2,2" ipadx="0" ipady="0" 
		gridx="0" gridy="0" gridheight="1" gridwidth="1"
		weightx="0.0" weighty="0.0" 
		anchor="GridBagConstraints.WEST"
		fill="GridBagConstraints.NONE"/>

	<scrollpane>
		<gridbagconstraints use="std" gridx="0" gridy="0" weightx="1.0" weighty="1.0" fill="GridBagConstraints.BOTH"/>
		<table id="interfaceTable"/>
	</scrollpane>

	<panel layout="GridBagLayout">
		<gridbagconstraints use="std" gridx="1" gridy="0" weighty="1.0" fill="GridBagConstraints.VERTICAL"/>

		<ibutton action="addInterfaceAction" text="metix.new" icon="resources/new.png">
			<gridbagconstraints use="std" gridx="0" gridy="0" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" insets="0,2,2,2"/>
		</ibutton>

		<ibutton action="editInterfaceAction" text="metix.edit" icon="resources/edit.png">
			<gridbagconstraints use="std" gridx="0" gridy="1" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
		</ibutton>

		<ibutton action="deleteInterfaceAction" text="metix.delete" icon="resources/delete.png">
			<gridbagconstraints use="std" gridx="0" gridy="2" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
		</ibutton>

		<label>
			<gridbagconstraints use="std" gridx="0" gridy="3" weightx="1.0" weighty="1.0" fill="GridBagConstraints.BOTH"/>
		</label>

		<ibutton action="okAction" text="metix.ok" icon="resources/ok.png">
			<gridbagconstraints use="std" gridx="0" gridy="4" weightx="1.0" fill="GridBagConstraints.HORIZONTAL" insets="2,2,0,2"/>
		</ibutton>

	</panel>

</panel>
