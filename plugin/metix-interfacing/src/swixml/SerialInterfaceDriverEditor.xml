<panel layout="GridBagLayout">

	<gridbagconstraints id="std" 
		insets="2,2,2,2" ipadx="0" ipady="0" 
		gridx="0" gridy="0" gridheight="1" gridwidth="1"
		weightx="0.0" weighty="0.0" 
		anchor="GridBagConstraints.WEST"
		fill="GridBagConstraints.NONE"/>

	<ifieldlabel text="metix-interfacing.comPort">
		<gridbagconstraints use="std" gridx="0" gridy="0"/>
	</ifieldlabel>

	<combobox id="comPort">
		<gridbagconstraints use="std" gridx="1" gridy="0" gridwidth="3" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
	</combobox>

	<ifieldlabel text="metix-interfacing.baudRate">
		<gridbagconstraints use="std" gridx="0" gridy="1"/>
	</ifieldlabel>

	<combobox id="baudRate">
		<gridbagconstraints use="std" gridx="1" gridy="1" gridwidth="3" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
	</combobox>

	<ifieldlabel text="metix-interfacing.dataBits">
		<gridbagconstraints use="std" gridx="0" gridy="2"/>
	</ifieldlabel>

	<combobox id="dataBits">
		<gridbagconstraints use="std" gridx="1" gridy="2" gridwidth="3" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
	</combobox>

	<ifieldlabel text="metix-interfacing.parity">
		<gridbagconstraints use="std" gridx="0" gridy="3"/>
	</ifieldlabel>

	<combobox id="parity">
		<gridbagconstraints use="std" gridx="1" gridy="3" gridwidth="3" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
	</combobox>

	<ifieldlabel text="metix-interfacing.stopBits">
		<gridbagconstraints use="std" gridx="0" gridy="4"/>
	</ifieldlabel>

	<combobox id="stopBits">
		<gridbagconstraints use="std" gridx="1" gridy="4" gridwidth="3" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
	</combobox>

	<ifieldlabel text="metix-interfacing.timeout">
		<gridbagconstraints use="std" gridx="0" gridy="5"/>
	</ifieldlabel>

	<slider id="timeout" minimum="1" maximum="50">
		<gridbagconstraints use="std" gridx="1" gridy="5" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
	</slider>

	<label text="000" id="timeoutValue">
		<gridbagconstraints use="std" gridx="2" gridy="5"/>
	</label>

	<label text="ms">
		<gridbagconstraints use="std" gridx="3" gridy="5"/>
	</label>

	<ifieldlabel text="metix-interfacing.pollIntervall">
		<gridbagconstraints use="std" gridx="0" gridy="6"/>
	</ifieldlabel>

	<slider id="poll" minimum="1" maximum="50">
		<gridbagconstraints use="std" gridx="1" gridy="6" weightx="1.0" fill="GridBagConstraints.HORIZONTAL"/>
	</slider>

	<label text="000" id="pollValue">
		<gridbagconstraints use="std" gridx="2" gridy="6"/>
	</label>

	<label text="ms">
		<gridbagconstraints use="std" gridx="3" gridy="6"/>
	</label>

</panel>
